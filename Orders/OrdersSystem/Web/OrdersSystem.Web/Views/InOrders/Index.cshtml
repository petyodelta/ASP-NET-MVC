@model IEnumerable<OrdersSystem.Web.ViewModels.InOrders.InOrderViewModel>
@using GridMvc.Html
@{
    ViewBag.Title = "Index";
}

<h2>All Incoming Orders</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-dismissible alert-success notification col-md-3 pull-right">
        <strong>@TempData["Success"]</strong>
    </div>
}

@if (User.IsInRole("Boss"))
{
    @Html.ActionLink("Create New Order", "Create", null, new { @class = "btn btn-primary" })
}

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(x => x.Customer.Name).Titled("Customer").SetWidth(110).Sortable(true).Filterable(true);
    columns.Add(x => x.Device.Name).Titled("Device").SetWidth(110).Sortable(true).Filterable(true);
    columns.Add(x => x.EndDate).Titled("End Date").SetWidth(110).Sortable(true).Format("{0:dd/MM/yyyy}").Filterable(true);
    columns.Add(x => x.Status).Titled("Order Status").SetWidth(110).Sortable(true);
    columns.Add().Titled("Details").Encoded(false).Sanitized(false).SetWidth(30)
        .RenderValueAs(x => Html.ActionLink("See Details", "Details", new { x.Id }, new { @class = "btn btn-primary" }));
}).WithPaging(10)


