@model OrdersSystem.Web.ViewModels.InOrders.InOrderViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Incoming Order Details</h2>
<hr />
@if (TempData["Success"] != null)
{
    <div class="alert alert-dismissible alert-success notification col-md-3 pull-right">
        <strong>@TempData["Success"]</strong>
    </div>
}

@Html.DisplayForModel("InOrderViewModel")

@if (User.IsInRole("Boss") || User.IsInRole("Admin"))
{
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
}



